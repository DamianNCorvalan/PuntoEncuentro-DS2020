@model IEnumerable<PuntoEncuento.Dueno>

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/Dueno.css")


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Usuario.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Nombre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Cuit }) |
                @Html.ActionLink("Details", "Details", new { id = item.Cuit }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Cuit })
            </td>
        </tr>
    }

</table>



